    <!--查询指定行数据-->
    <select id="queryList" resultMap="ExcleUserMap">
        select
        id, role_type, student_number, name, academy, major, class_grade, sex, wechat, qq, mobile, mailbox, create_time
        from excle_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleType != null and roleType != ''">
                and role_type = #{roleType}
            </if>
            <if test="studentNumber != null">
                and student_number LIKE concat('%', #{studentNumber},'%')
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="academy != null and academy != ''">
                and academy = #{academy}
            </if>
            <if test="major != null and major != ''">
                and major = #{major}
            </if>
            <if test="classGrade != null and classGrade != ''">
