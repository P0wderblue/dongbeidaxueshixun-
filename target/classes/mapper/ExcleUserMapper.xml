    <!--查询所有-->
    <select id="queryAll" resultMap="ExcleUserMap">
        select id,
               role_type,
               student_number,
               name,
               academy,
               major,
               class_grade,
               sex,
               wechat,
               qq,
               mobile,
               mailbox,
               create_time
        from excle_user
